{% extends "base.html.twig" %}

{% block title %}Products{% endblock %}

{% block body %}

    <h1>Welcome to the product page</h1>

    {% for product in products %}
        <div class="card">
            <div class="card-header">
                {{ product.title }}
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>{{ product.body}} </p>
                    <footer class="blockquote-footer">{{ product.createAt|date("m/d/Y H:i:s")}}</footer>
                </blockquote>
            </div>
        </div>
    {% endfor %}

{% endblock %}
